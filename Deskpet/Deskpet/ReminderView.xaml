<UserControl x:Class="Deskpet.ReminderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Deskpet"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400"
             Background="#F5F7FA">
    
    <UserControl.Resources>
        <!-- 美化 ComboBox -->
        <Style TargetType="ComboBox" x:Key="PrettyComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <DockPanel>
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      Margin="5,0,0,0"/>
                                    <ToggleButton DockPanel.Dock="Right"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Focusable="False"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Margin="0"
                                                  Padding="0"
                                                  HorizontalAlignment="Right">
                                        <Path Width="10" Height="6" Fill="#555" Margin="4,0,4,0"
                                              Data="M 0 0 L 10 0 L 5 6 Z"/>
                                    </ToggleButton>
                                </DockPanel>
                            </Border>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="White" BorderBrush="#CCC" BorderThickness="1" CornerRadius="4" >
                                    <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 美化 Button -->
        <Style TargetType="Button" x:Key="PrettyButton">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#003F6B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#AAA"/>
                                <Setter Property="Foreground" Value="#666"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 美化 TextBox -->
        <Style TargetType="TextBox" x:Key="PrettyTextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBlock 樣式 -->
        <Style TargetType="TextBlock" x:Key="LabelTextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">


            <TextBlock Text="請選擇提醒內容：" Style="{StaticResource LabelTextBlock}" FontSize="16" Margin="0,0,0,10"/>

            <ComboBox x:Name="ReminderTypeComboBox" 
          Style="{StaticResource PrettyComboBox}"
          SelectedIndex="0">
                <ComboBoxItem Content="喝水" />
                <ComboBoxItem Content="休息" />
            </ComboBox>

            <TextBlock x:Name="SelectedReminderText"
           Text="目前選擇: 喝水"
           FontSize="14"
           Foreground="#555"
           HorizontalAlignment="Center"
           Margin="0,0,0,15"/>

            <TextBlock Text="請輸入提醒時間：" Style="{StaticResource LabelTextBlock}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <StackPanel Margin="5" VerticalAlignment="Center">
                    <TextBlock Text="時 (0-24)" HorizontalAlignment="Center" Foreground="#666"/>
                    <TextBox x:Name="HourTextBox" Style="{StaticResource PrettyTextBox}" Text="1" />
                </StackPanel>
                <StackPanel Margin="5" VerticalAlignment="Center">
                    <TextBlock Text="分 (0-60)" HorizontalAlignment="Center" Foreground="#666"/>
                    <TextBox x:Name="MinuteTextBox" Style="{StaticResource PrettyTextBox}" Text="0" />
                </StackPanel>
                <StackPanel Margin="5" VerticalAlignment="Center">
                    <TextBlock Text="秒 (0-60)" HorizontalAlignment="Center" Foreground="#666"/>
                    <TextBox x:Name="SecondTextBox" Style="{StaticResource PrettyTextBox}" Text="0" />
                </StackPanel>
            </StackPanel>

            <Button Content="啟動提醒" Style="{StaticResource PrettyButton}" Click="StartReminder_Click"/>
            <Button Content="停止提醒" Style="{StaticResource PrettyButton}" Click="StopReminder_Click"/>

            <TextBlock x:Name="ReminderText"
                       Text="等待提醒中..."
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#222"
                       Margin="0,20,0,0"/>
            <TextBlock x:Name="CountdownText"
                       Text=""
                       FontSize="16"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       Foreground="#005A9E"/>
        </StackPanel>
    </Grid>

</UserControl>
